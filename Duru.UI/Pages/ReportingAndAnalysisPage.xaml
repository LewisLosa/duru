<Page x:Class="Duru.UI.Pages.ReportingAndAnalysisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModels="clr-namespace:Duru.UI.ViewModels.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:ReportingViewModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Raporlama ve Analiz">

    <Page.DataContext>
        <viewModels:ReportingViewModel />
    </Page.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <RowDefinition Height="Auto" /> <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Raporlama ve Analiz" Grid.Row="0"
                   Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                   Margin="0,0,0,15" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <DatePicker Width="140" Margin="0,0,10,0"
                        mah:TextBoxHelper.Watermark="Başlangıç Tarihi"
                        SelectedDate="{Binding ReportStartDate}" />
            <DatePicker Width="140" Margin="0,0,10,0"
                        mah:TextBoxHelper.Watermark="Bitiş Tarihi"
                        SelectedDate="{Binding ReportEndDate}" />
            <Button Content="Raporu Getir"
                    Command="{Binding LoadReportDataCommand}"
                    Style="{StaticResource MahApps.Styles.Button.Square}"
                    Margin="10,0,0,0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ChartBar" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>

        <WrapPanel Grid.Row="2" Margin="0,0,0,20">
            <mah:Tile Title="Toplam Gelir" Margin="5" Width="180" Background="{DynamicResource MahApps.Brushes.Accent}">
                <TextBlock Text="{Binding TotalRevenue, StringFormat=C}" FontSize="24" FontWeight="Bold"
                           Foreground="White" />
            </mah:Tile>
            <mah:Tile Title="Doluluk Oranı" Margin="5" Width="180"
                      Background="{DynamicResource MahApps.Brushes.Accent2}">
                <TextBlock Text="{Binding OccupancyRate, StringFormat=P1}" FontSize="24" FontWeight="Bold"
                           Foreground="White" />
            </mah:Tile>
            <mah:Tile Title="Ort. Günlük Fiyat (ADR)" Margin="5" Width="180"
                      Background="{DynamicResource MahApps.Brushes.Accent3}">
                <TextBlock Text="{Binding AverageDailyRate, StringFormat=C}" FontSize="24" FontWeight="Bold"
                           Foreground="White" />
            </mah:Tile>
            <mah:Tile Title="Oda Başına Gelir (RevPAR)" Margin="5" Width="180"
                      Background="{DynamicResource MahApps.Brushes.Accent4}">
                <TextBlock Text="{Binding RevPAR, StringFormat=C}" FontSize="24" FontWeight="Bold" Foreground="White" />
            </mah:Tile>
        </WrapPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" /> <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Padding="10" Margin="0,0,5,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Zamana Göre Gelir" Style="{StaticResource MahApps.Styles.TextBlock.Watermark}"
                               Margin="0,0,0,5" />
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding RevenueSeries}" LegendLocation="Bottom">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Tarih" Labels="{Binding RevenueLabels}" />
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Gelir" LabelFormatter="{Binding RevenueYFormatter}" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Padding="10" Margin="0,5,5,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Zamana Göre Doluluk Oranı"
                               Style="{StaticResource MahApps.Styles.TextBlock.Watermark}" Margin="0,0,0,5" />
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding OccupancySeries}" LegendLocation="None">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Tarih" Labels="{Binding OccupancyLabels}" />
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Doluluk (%)" MinValue="0" MaxValue="1"
                                      LabelFormatter="{Binding OccupancyYFormatter}" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>


            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Padding="10" Margin="5,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Oda Tipine Göre Gelir Dağılımı"
                               Style="{StaticResource MahApps.Styles.TextBlock.Watermark}" Margin="0,0,0,5" />
                    <lvc:PieChart Grid.Row="1" Series="{Binding RoomTypeRevenueSeries}" LegendLocation="Bottom"
                                  DataClick="PieChart_DataClick" Hoverable="True" />
                </Grid>
            </Border>

        </Grid>

    </Grid>
</Page>
<Page x:Class="Duru.UI.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModels="clr-namespace:Duru.UI.ViewModels.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:UserProfileViewModel, IsDesignTimeCreatable=True}"
      mah:DialogParticipation.Register="{Binding}"
      d:DesignHeight="600" d:DesignWidth="700"
      Title="Profilim">

    <Page.DataContext>
        <viewModels:UserProfileViewModel />
    </Page.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Profil Bilgilerim" Grid.Row="0"
                   Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                   Margin="0,0,0,15" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <StackPanel>
                <GroupBox Header="Genel Bilgiler" Style="{StaticResource MahApps.Styles.GroupBox}" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBox mah:TextBoxHelper.Watermark="Kullanıcı Adı" IsReadOnly="True"
                                 Text="{Binding Username}" Margin="0,0,0,10" />
                        <TextBox mah:TextBoxHelper.Watermark="Ad Soyad"
                                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
                        <TextBox mah:TextBoxHelper.Watermark="E-posta Adresi"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
                        <TextBox mah:TextBoxHelper.Watermark="Telefon Numarası"
                                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
                        <TextBox mah:TextBoxHelper.Watermark="Kullanıcı Rolü" IsReadOnly="True" Text="{Binding Role}"
                                 Margin="0,0,0,10" />
                        <TextBox mah:TextBoxHelper.Watermark="Son Giriş Tarihi" IsReadOnly="True"
                                 Text="{Binding LastLogin, StringFormat='{}{0:G}'}" Margin="0,0,0,0" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Şifre Değiştirme" Style="{StaticResource MahApps.Styles.GroupBox}" Margin="0,10,0,10">

                    <StackPanel>
                        <PasswordBox x:Name="CurrentPasswordBox" mah:TextBoxHelper.Watermark="Mevcut Şifreniz"
                                     Margin="0,0,0,10" />
                        <PasswordBox x:Name="NewPasswordBox"
                                     mah:TextBoxHelper.Watermark="Yeni Şifreniz (En az 6 karakter)" Margin="0,0,0,10" />
                        <PasswordBox x:Name="ConfirmPasswordBox" mah:TextBoxHelper.Watermark="Yeni Şifreniz (Tekrar)"
                                     Margin="0,0,0,15" />

                        <Button Content="Şifreyi Kaydet" HorizontalAlignment="Left"
                                Command="{Binding ChangePasswordCommand}" IsEnabled="{Binding}" />
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Değişiklikleri Kaydet"
                Command="{Binding SaveChangesCommand}"
                IsEnabled="{Binding IsDirty}"
                Style="{StaticResource MahApps.Styles.Button.MetroSquare.Accent}"
                HorizontalAlignment="Right" Margin="0,15,0,0" />

    </Grid>
</Page>
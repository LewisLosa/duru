<Window x:Class="Duru.UI.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duru.UI"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Yeni Oda Ekle" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MahApps.Fonts.Family}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Text="Yeni Oda Bilgileri" 
                 FontSize="24" 
                 Margin="0,0,0,20"/>

        <!-- Form Alanları -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Temel Bilgiler -->
                <GroupBox Header="Temel Bilgiler" 
                                 Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="Oda Numarası" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="RoomNumberTextBox" 
                                        Margin="0,0,0,10"/>

                        <TextBlock Text="Oda Tipi" 
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="RoomTypeComboBox" 
                                Margin="0,0,0,10">
                            <ComboBoxItem Content="Tek Kişilik"/>
                            <ComboBoxItem Content="Çift Kişilik"/>
                            <ComboBoxItem Content="Suit"/>
                            <ComboBoxItem Content="Aile Suit"/>
                        </ComboBox>

                        <TextBlock Text="Kat" 
                                 Margin="0,0,0,5"/>
                        <controls:NumericUpDown x:Name="FloorNumericUpDown" 
                                             Minimum="0" 
                                             Maximum="100" 
                                             Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Detaylar -->
                <GroupBox Header="Oda Detayları" 
                                 Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="Yatak Sayısı" 
                                 Margin="0,0,0,5"/>
                        <controls:NumericUpDown x:Name="BedCountNumericUpDown" 
                                             Minimum="1" 
                                             Maximum="10" 
                                             Margin="0,0,0,10"/>

                        <TextBlock Text="Gecelik Ücret" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="PriceTextBox" 
                                        Margin="0,0,0,10">
                            <TextBox.Text>
                                <Binding Path="Text" 
                                         UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock Text="Müsaitlik Durumu" 
                                 Margin="0,0,0,5"/>
                        <controls:ToggleSwitch x:Name="AvailabilityToggle" 
                                            Content="Müsait" 
                                            Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Notlar -->
                <GroupBox Header="Notlar" 
                                 Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBox x:Name="NotesTextBox" 
                                        Height="100" 
                                        TextWrapping="Wrap" 
                                        AcceptsReturn="True" 
                                        VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="İptal" 
                           Style="{StaticResource MahApps.Styles.Button.Square}" 
                           Margin="0,0,10,0" 
                           Click="CancelButton_Click"/>
            <Button Content="Kaydet" 
                           Style="{StaticResource MahApps.Styles.Button.Square.Accent}" 
                           Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 